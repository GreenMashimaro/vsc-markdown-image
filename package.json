{
    "name": "markdown-image",
    "displayName": "Markdown Image",
    "description": "Easy to insert a image to markdown",
    "version": "0.0.1",
    "publisher": "hancel",
    "engines": {
        "vscode": "^1.44.0"
    },
    "keywords": [
        "Picture",
        "cdn",
        "markdown",
        "helper"
    ],
    "icon": "asserts/icon.png",
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:markdown-image.paste",
        "onCommand:markdown-image.config"
    ],
    "repository": "https://github.com/imlinhanchao/vsc-markdown-image",
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "markdown-image.paste",
                "title": "Paste Image"
            },
            {
                "command": "markdown-image.config",
                "title": "Markdown Image Config Setting"
            }
        ],
        "keybindings": [
            {
                "command": "markdown-image.paste",
                "key": "alt+shift+v",
                "mac": "alt+shift+v",
                "when": "editorLangId == markdown"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "markdown-image.paste",
                    "when": "editorLangId == markdown",
                    "group": "9_cutcopypaste@4"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Markdown Image",
            "properties": {
                "markdown-image.base.uploadMethod": {
                    "type": "string",
                    "enum": [
                        "Local",
                        "Coding"
                    ],
                    "default": "local",
                    "description": "Method to upload pictures. To the local or another picture CDN service."
                },
                "markdown-image.local.createDirectoryByDate": {
                    "type": "boolean",
                    "default": false,
                    "description": "Create a folder according to the upload date."
                },
                "markdown-image.local.path": {
                    "type": "string",
                    "default": "/image",
                    "description": "Picture storage directory that in the local (automatically created if it does not exist)."
                },
                "markdown-image.coding.createDirectoryByDate": {
                    "type": "boolean",
                    "default": false,
                    "description": "Create a folder in the repository according to the upload date."
                },
                "markdown-image.coding.path": {
                    "type": "string",
                    "default": "/",
                    "description": "Picture storage directory that in the repository (automatically created if it does not exist)."
                },
                "markdown-image.coding.token": {
                    "type": "string",
                    "default": "",
                    "description": "Coding person access token: https://help.coding.net/docs/member/tokens.html"
                },
                "markdown-image.coding.repository": {
                    "type": "string",
                    "default": "",
                    "description": "Coding repository, for example: https://coding-demo.coding.net/p/coding-demo/d/coding-demo/git"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "coding-picbed": "0.0.12"
    }
}
