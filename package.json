{
    "name": "markdown-image",
    "displayName": "Markdown Image",
    "description": "Easy to insert a image to markdown",
    "version": "0.0.1",
    "publisher": "hancel",
    "engines": {
        "vscode": "^1.33.0"
    },
    "keywords": [
        "Picture",
        "cdn",
        "markdown",
        "helper"
    ],
    "icon": "asserts/icon.png",
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:markdown-image.paste",
        "onCommand:markdown-image.config"
    ],
    "repository": "https://github.com/imlinhanchao/vsc-markdown-image",
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "markdown-image.paste",
                "category": "Markdown Image",
                "title": "Paste Image"
            },
            {
                "command": "markdown-image.config",
                "category": "Markdown Image",
                "title": "Markdown Image Config Setting"
            }
        ],
        "keybindings": [
            {
                "command": "markdown-image.paste",
                "key": "alt+shift+v",
                "mac": "alt+shift+v",
                "when": "editorLangId == markdown"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "markdown-image.paste",
                    "when": "editorLangId == markdown",
                    "group": "9_cutcopypaste@4"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Markdown Image",
            "properties": {
                "markdown-image.base.uploadMethod": {
                    "type": "string",
                    "enum": [
                        "Local",
                        "Coding",
                        "Imgur",
                        "sm.ms",
                        "define by code"
                    ],
                    "default": "Local",
                    "description": "Method to upload pictures. To the local or another picture CDN service.",
                    "enumDescriptions": [
                        "Upload the image to the project directory. You can use `#markdown-image.local.path` sets the relative path for upload.",
                        "Upload the image to git repository in Coding.net . You can configure the repository through `#markdown-image.coding.repository`. You need to configure the Token to access the repository through `#markdown-image.coding.token`.",
                        "Upload the image to Imgur. You can configure `Client Id` through `#markdown-image.imgur.clientId`."
                        "Upload the image to sm.ms. You don't need to configure anything others."
                    ]
                },
                "markdown-image.local.createFolderByDate": {
                    "type": "boolean",
                    "default": false,
                    "description": "Create a folder according to the upload date."
                },
                "markdown-image.local.path": {
                    "type": "string",
                    "default": "/images",
                    "description": "Picture storage directory that in the local (automatically created if it does not exist)."
                },
                "markdown-image.coding.createFolderByDate": {
                    "type": "boolean",
                    "default": false,
                    "description": "Create a folder in the repository according to the upload date."
                },
                "markdown-image.coding.path": {
                    "type": "string",
                    "default": "/",
                    "description": "Picture upload directory that in the repository (automatically created if it does not exist)."
                },
                "markdown-image.coding.token": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "Coding person [access token](https://help.coding.net/docs/member/tokens.html)."
                },
                "markdown-image.coding.repository": {
                    "type": "string",
                    "default": "",
                    "pattern": "^(https://([^.]*?).coding.net/p/([^/]*?)/(d/([^/]*?)/(git|)|)|)$",
                    "markdownDescription": "Coding repository, for example: `https://coding-demo.coding.net/p/coding-demo/d/coding-demo/git`"
                },
                "markdown-image.imgur.clientId": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "The client id registered with imgur. You can registed it at [here](https://api.imgur.com/oauth2/addclient)."
                },
                "markdown-image.imgur.httpProxy": {
                    "type": "string",
                    "default": "",
                    "description": "Connect to Imgur via http proxy."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "coding-picbed": "0.0.12",
        "form-data": "^3.0.0",
        "got": "^10.7.0",
        "https-proxy-agent": "^4.0.0"
    }
}
